@model NobiShop.Models.LOAI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2> CHỈNH SỬA THÔNG TIN DANH MỤC </h2>
@using (Html.BeginForm("Edit", "DanhMuc", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã Loại  :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaLoai" value="@Model.MaLoai" readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên Loại:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenLoaiCHo" value="@Model.TenLoaiCho" required />
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ DANH MỤC", "Index")
</div>
