@model NobiShop.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2>Xoa San Pham</h2>

<h3>Are you sure you want to delete this?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
 
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ten Sach:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Gia San Pham:
        </dt>

        <dd>
            @Html.FormatValue(@Model.GiaBan, "{0:#,##0}") VNĐ
        </dd>

        <dt>
            Mo Ta:
        </dt>

        <dd>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnhBia)
        </dt>

        <dd>
            <img src="~/Images/@Model.AnhBia" alt=" @Model.TenSP">
        </dd>

        <dt>
            Ngay cap nhat:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            So Luong Ban:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongBan)
        </dd>

        <dt>
           Ma loai:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

        <dt>
            Dich Vu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDV)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
