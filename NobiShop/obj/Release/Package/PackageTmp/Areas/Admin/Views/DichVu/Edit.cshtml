@model NobiShop.Models.DICHVU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2> CHỈNH SỬA THÔNG TIN DỊCH VỤ </h2>
@using (Html.BeginForm("Edit", "DichVu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã Dịch Vụ  :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaDV" value="@Model.MaDV" readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên Dịch Vụ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenDV" value="@Model.TenDV" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ DỊCH VỤ", "Index")
</div>
