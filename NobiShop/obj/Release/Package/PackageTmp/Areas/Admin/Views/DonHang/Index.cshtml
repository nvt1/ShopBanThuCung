@using NobiShop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NobiShop.Models.DONDATHANG>

@helper Truncate(string s, int length)
{
    if (s.Length < length)
    {
        @s
    }
    else
    {
        @s.Substring(0, length)
    }
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

