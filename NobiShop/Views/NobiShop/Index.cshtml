
@model IEnumerable<NobiShop.Models.SANPHAM>
@{
    ViewBag.Title = "TRANG CHỦ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="text-center" style="color:red;font-style:italic">THÚ CƯNG</h2>
<div class="row text-center">
    @foreach (var sanpham in Model)
    {
        <div class=" col-sm-3 col-md-3 col-lg-3 col-xs-6">
            <div class="thumbnail" style="border-width:unset;border-color:gray;">
                <div class="thumbnail">
                    <img src="~/Images/@sanpham.AnhBia">

                </div>
                <div class="caption">
                    <h4 style="min-height:60px;">
                        <a href="@Url.Action("ChiTietSanPham", "NobiShop", new { id = sanpham.MaSP })">@sanpham.TenSP</a>

                    </h4>
                    <p>
                        <a href="@Url.Action("ThemGioHang", "GioHang", new {ms = sanpham.MaSP, url = Request.Url.ToString()})" class="btn btn-danger" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>





